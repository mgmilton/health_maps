<%= form_for login_path do %>
<div class="form-group row">
  <label class="col-sm-2 col-form-label">
   <%= label_tag :email %></label></br>
  <div class="col-sm-10">
   <%= text_field_tag :email %></br>
  </div>
 </div>

 <div class="form-group row">
   <label class="col-sm-2 col-form-label">
     <%= label_tag :password %></label><
  <div class="col-sm-10">
     <%= password_field_tag :password %></br></br>
   </div>
  </div>
   <button type="submit" class="btn btn-primary btn-block"><%= submit_tag "Sign In" %></button>
 <% end %>
