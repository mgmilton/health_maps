<%= form_for login_path, :url => login_path do %>
<div class="form-group row">
  <label class="col-sm-2 col-form-label">
   <%= label_tag :email %></label></br>
  <div class="col-sm-10">
   <%= text_field_tag :email %></br>
  </div>
 </div>

 <div class="form-group row">
   <label class="col-sm-2 col-form-label">
     <%= label_tag :password %></label></br>
  <div class="col-sm-10">
     <%= password_field_tag :password %></br></br>
   </div>
  </div>
  <center>
  <button type="button" class="btn btn-primary"> <%= link_to("Sign In", login_path, class: "btn") %> </button>
 </center>
 <% end %>
