<%= form_tag search_path do %>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= label_tag :name %></label>
    <div class="col-sm-10">
      <%= collection_select(:name, :id, Location.all, :id, :name_with_state) %>
    </div>
  </div>
  <%= submit_tag "Search" %>
<% end %>
