<% @location.write_neighborhood_health_data %>


<div class='neighborhood_data'>
  <h1> Neighborhood Health information for <%= @location.name %> </h1>
</div>

<div id="barchart_material" style="width: 1200px; height: 1200px;">
</div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
  google.charts.load('current', {'packages':['bar']});
  google.charts.setOnLoadCallback(drawChart);


  function drawChart() {
    var data = google.visualization.arrayToDataTable([
      ['Neighborhood', 'Lack of Access to Health Care', 'Arthritis Prevalence', 'Binge Drinking Prevalance', 'High Blood Pressure Prevalence', 'Cancer Prevalence', 'Asthma Prevalence', 'Current Smoking Prevalance', 'Dental Visit Prevalence', 'Diabetes Prevalence', 'High Cholesterol Prevalence', 'Kidney Disease Prevalence', 'Lack of Physical Activity Prevalence', 'Bad Mental Health Prevalence', 'Obesity Prevalence', 'Pap Smear Prevalence', 'Lack of Sleep Prevalence', 'Stroke Prevalence', 'Teeth Loss Prevalence', 'Heart Disease Prevalence', 'Routine Checkup Prevalence'],
      ['Census Code: <%=@location.neighborhoods.first.tractfips%>',
      <%=@location.neighborhoods.first.access_to_healthcare %>,
      <%=@location.neighborhoods.first.arthritis_prevalence%>, <%=@location.neighborhoods.first.binge_drinking_prevalence%>,
      <%=@location.neighborhoods.first.high_blood_pressure_prevalence%>,
      <%=@location.neighborhoods.first.cancer_prevalence%>,
      <%=@location.neighborhoods.first.asthma_prevalence%>,
      <%=@location.neighborhoods.first.current_smoking_prevalence%>,
      <%=@location.neighborhoods.first.dental_visit_prevalence%>,
      <%=@location.neighborhoods.first.diabetes_prevalence%>,
      <%=@location.neighborhoods.first.high_cholesterol_prevalence%>,
      <%=@location.neighborhoods.first.kidney_disease_prevalence%>,
      <%=@location.neighborhoods.first.lack_of_physical_activity_prevalence%>,
      <%=@location.neighborhoods.first.bad_mental_health_prevalence%>,
      <%=@location.neighborhoods.first.obesity_prevalence%>,
      <%=@location.neighborhoods.first.pap_smear_prevalence%>,
      <%=@location.neighborhoods.first.lack_of_sleep_prevalence%>,
      <%=@location.neighborhoods.first.stroke_prevalence%>,
      <%=@location.neighborhoods.first.teeth_loss_prevalence%>,
      <%=@location.neighborhoods.first.heart_disease_prevalence%>,
      <%=@location.neighborhoods.first.routine_checkup_prevalence%>],
    ]);

    var options = {
      chart: {
        title: 'CDC Population Data for Health Measurements',
        subtitle: 'All Metrics as Percentage of Population',
      },
      bars: 'vertical',
      vAxis: {
        title: 'Population (percentage)',
        minValue: 0,
        maxValue: 100
      }
    };

    var chart = new google.charts.Bar(document.getElementById('barchart_material'));

    chart.draw(data, google.charts.Bar.convertOptions(options));
  }
</script>
