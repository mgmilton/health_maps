<%= form_tag search_path, method: get do %>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= label_tag :name %></label>
    <div class="col-sm-10">
      <%= collection_select_tag(:name, Location.order(:name), :id, :name) %>
    </div>
  </div>
  <%= submit_tag "Search" %>
<% end %>
