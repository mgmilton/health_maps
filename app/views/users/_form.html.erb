<figure class="card">
  <%= form_for @user do |f| %>
    <div class="form-group row">
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :location %>
        <%= f.text_field :location %>
    </div>

    <div class="form-group row">
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
    <center>
      <%= f.submit class: 'btn' %>
    </center>
  <% end %>
</figure>
