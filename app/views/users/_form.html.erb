<%= form_for @user do |f| %>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= f.label :name %></label>
  <div class="col-sm-10">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= f.label :location %></label>
    <div class="col-sm-10">
      <%= f.text_field :location %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= f.label :email %></label>
    <div class="col-sm-10">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= f.label :password %></label>
    <div class="col-sm-10">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= f.label :password_confirmation %></label>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
    <%= f.submit %>
  <% end %>
  
